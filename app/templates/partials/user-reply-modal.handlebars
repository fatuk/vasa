<!-- Cluster map info -->
<div class="modal modal_wide modal_shadow modal_user-reply">
	<header class="modal__header">
		<!-- Close btn -->
		<a href="#" class="modal__close">
			<i class="icon icon-close-white-big"></i>
		</a>
		<!-- Title -->
		<h2 class="modal__title">
			Ответ на предложение
		</h2>
	</header>
	<div class="modal__container modal__container_white">
		<div class="form form_offer-reply">
			<form action="#">
					<!-- Price row -->
					<div class="form__row">
						<div class="form__cell form__cell_left">
							<label for="price" class="form__label form__label_v-center">
								Цена:
							</label>
						</div>
						<div class="form__cell form__cell_right">
							<div class="field">
								<!-- Price -->
								<div class="price">
									<input type="text" id="price" class="input input_border input_wide">
									<select class="js-selectPriceType" name="price-type">
										<option selected value="1">
											руб
										</option>
										<option selected value="2">
											руб/м<sup>2</sup>
										</option>
									</select>
								</div>
							</div>
						</div>
					</div>
					<!-- Description row -->
					<div class="form__row">
						<div class="form__cell form__cell_left">
							<label for="description" class="form__label form__label_v-center">
								Описание:
							</label>
						</div>
						<div class="form__cell form__cell_right">
							<div class="field">
								<textarea id="description" class="textarea"></textarea>
							</div>
						</div>
					</div>
					<!-- Hide messages -->
					<div class="form__row">
						<div class="form__cell form__cell_left">

						</div>
						<div class="form__cell form__cell_right">
							<div class="field">
								<label class="checkbox">
									<input type="checkbox">
									<span class="checkbox__check">
										<i class="icon icon-check"></i>
									</span>
									<span class="checkbox__label">
										Скрыть переписку
									</span>
								</label>
							</div>
						</div>
					</div>
					<!-- Button row -->
					<div class="form__row">
						<div class="form__cell form__cell_right">
							<input type="submit" value="Ответить" class="btn btn_green">
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
<div class="overlay overlay_absolute"></div>
</div>
